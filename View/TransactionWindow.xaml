<Window x:Class="ReturnToStonks.TransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReturnToStonks"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d" Height="250" Width="500" WindowStyle="None" WindowStartupLocation="CenterOwner">
  <Window.Resources>
    <local:MonetaryInputConverter x:Key="MonetaryInputConverter"/>
    <local:ComboboxButtonVisibilityConverter x:Key="ComboboxButtonVisibilityConverter"/>
    <local:ControlsVisibilityConverter x:Key="ControlsVisibilityConverter"/>
    <local:PluralWordingConverter x:Key="PluralWordingConverter"/>
  </Window.Resources>
  <Grid Grid.IsSharedSizeScope="True">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition Height="60"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>

    <TextBox Text="{Binding SelectedTransaction.Purpose}" x:Name="Purpose" Grid.ColumnSpan="2"/>
    <ComboBox x:Name="Category" Grid.Column="2" VerticalContentAlignment="Bottom" ItemsSource="{Binding Categories, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
              SelectedItem="{Binding SelectedCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <Grid Margin="0,0,0,3">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition SharedSizeGroup="MakeTheLastElementHoverOver"/>
            </Grid.ColumnDefinitions>
            <emoji:TextBlock Text="{Binding Symbol}" Margin="0,0,5,2"/>
            <TextBlock Text="{Binding Name}" Grid.Column="1" VerticalAlignment="Bottom"/>
            <Button Command="{Binding DataContext.ChangeCategoryCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"
              Name="ChangeCategoryButton" Content="✎" Height="25" Margin="10, 0, 0, 0" HorizontalAlignment="Right" Grid.Column="1">
              <Button.Visibility>
                <MultiBinding Converter="{StaticResource ComboboxButtonVisibilityConverter}">
                  <Binding Path="Symbol"/>
                  <Binding Path="IsMouseOver" RelativeSource="{RelativeSource Mode=TemplatedParent}"/>
                </MultiBinding>
              </Button.Visibility>
            </Button>
          </Grid>
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>
    <Popup x:Name="NewCategoryPopup" Placement="Bottom" PlacementTarget="{Binding ElementName=Category}">
      <Grid Background="White">
        <Grid.RowDefinitions>
          <RowDefinition/>
          <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <emoji:Picker Selection="{Binding SelectedCategory.Symbol, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="10,0,-5,0" VerticalAlignment="Bottom" />
        <TextBox Text="{Binding SelectedCategory.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="Name" FontSize="20" Height="40" Margin="15,0,10,0" Padding="0" Grid.Column="1"/>

        <StackPanel Orientation="Horizontal" Height="45" Grid.Row="1" Grid.ColumnSpan="2">
          <Button Content="Cancel" Click="CancelButton_Click" Name="CancelNewCategory" FontSize="17" Width="70" Margin="10"/>
          <Button Content="Delete" Command="{Binding DeleteCategoryCommand}" IsEnabled="{Binding IsDeleteButtonEnabled}" FontSize="17" Width="70" Margin="10"/>
          <Button Content="Save" Command="{Binding SaveCategoryCommand}" FontSize="17" Width="70" Margin="10"/>
        </StackPanel>
      </Grid>
    </Popup>

    <local:ToggleSwitch IsChecked="False" CheckedText="Income" UncheckedText="Expense" Grid.Row="1"/>
    <TextBox x:Name="Amount" Text="{Binding SelectedTransaction.Amount, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}, Converter={StaticResource MonetaryInputConverter}}"
             HorizontalContentAlignment="Right" Grid.Row="1" Grid.Column="1"/>
    <DatePicker SelectedDate="{Binding SelectedTransaction.Date}" x:Name="Date" Grid.Row="1" Grid.Column="2"/>

    <local:ToggleSwitch IsChecked="{Binding SelectedTransaction.IsRecurring, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        CheckedText="recurring" UncheckedText="not recurring" Grid.Row="2"/>
    <local:UpDownCounter x:Name="Every" Text="{Binding SelectedTransaction.Recurrence.SelectedSpan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Visibility="{Binding SelectedTransaction.IsRecurring, Converter={StaticResource ControlsVisibilityConverter}}" Grid.Row="2" Grid.Column="1"/>
    <ComboBox Visibility="{Binding SelectedTransaction.IsRecurring, Converter={StaticResource ControlsVisibilityConverter}}"
              Grid.Row="2" Grid.Column="2">
      <ComboBox.SelectedItem>
        <MultiBinding Converter="{StaticResource PluralWordingConverter}">
          <Binding Path="SelectedTransaction.Recurrence.SelectedUnit"/>
          <Binding Path="SelectedTransaction.Recurrence.SelectedSpan"/>
        </MultiBinding>
      </ComboBox.SelectedItem>
      <ComboBox.ItemsSource>
        <MultiBinding Converter="{StaticResource PluralWordingConverter}">
          <Binding Path="SelectedTransaction.Recurrence.UnitsList"/>
          <Binding Path="SelectedTransaction.Recurrence.SelectedSpan"/>
        </MultiBinding>
      </ComboBox.ItemsSource>
    </ComboBox>

    <Button Content="Save" Command="{Binding SaveTransactionCommand}" Grid.Row="3" Grid.ColumnSpan="2"/>
    <Button Content="Cancel" Click="CancelButton_Click" Grid.Row="3" Grid.Column="2"/>
  </Grid>
</Window>